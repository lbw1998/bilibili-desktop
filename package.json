{
  "name": "bilibili-desktop",
  "description": "bilibili桌面端",
  "author": "取暖",
  "version": "0.0.1",
  "main": "electron/main.ts",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit  && vite build",
    "serve": "vite preview",
    "electron:serve": "electron .",
    "dev:tsc": "cross-env NODE_ENV=development nodemon --watch electron/main.ts --exec npm run electron:serve ",
    "electron:build": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.bwen.bilibili",
    "productName": "bilibili",
    "copyright": "Copyright © 2021 取暖",
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "dist/favicon.ico",
      "uninstallerIcon": "dist/favicon.ico"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "win": {
      "icon": "dist/favicon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "ia32"
          ]
        }
      ]
    },
    "directories": {
      "buildResources": "assets",
      "output": "dist_electron"
    }
  },
  "dependencies": {
    "@types/js-cookie": "^3.0.1",
    "axios": "^0.24.0",
    "flv.js": "^1.6.2",
    "js-cookie": "^3.0.1",
    "qrcode.vue": "^3.3.3",
    "svg-sprite-loader": "^6.0.11",
    "vue": "^3.2.16",
    "vue-router": "4"
  },
  "devDependencies": {
    "@types/node": "^16.11.7",
    "@types/qs": "^6.9.7",
    "@vitejs/plugin-vue": "^1.9.3",
    "cross-env": "^7.0.3",
    "electron": "16.0.2",
    "electron-builder": "^22.14.5",
    "node-sass": "^6.0.1",
    "nodemon": "^2.0.15",
    "element-plus": "^1.2.0-beta.6",
    "sass": "^1.43.4",
    "sass-loader": "^12.3.0",
    "typescript": "^4.4.3",
    "vite": "^2.6.4",
    "vue-tsc": "^0.3.0"
  }
}
